<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.administrator.a2019_openhack_team22">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoTheme" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoTheme"></activity>
        <activity
            android:name=".AddRoomActivity"
            android:theme="@style/NoTheme"></activity>
        <activity
            android:name=".JoinActivity"
            android:theme="@style/NoTheme" />
        <activity
            android:name=".WaitingRoomActivity"
            android:theme="@style/NoTheme" />
        <activity
            android:name=".RoomActivity"
            android:theme="@style/NoTheme" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/NoTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RoomListActivity"
            android:theme="@style/NoTheme"></activity>
        <activity
            android:name=".AuthActivity"
            android:theme="@style/NoTheme"></activity>
        <activity
            android:name=".AwardActivity"
            android:theme="@style/NoTheme"></activity>
        <activity android:name=".RoomHistoryActivity"></activity>
    </application>

</manifest>