<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RoomListActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TabHost
        android:id="@+id/tabHost1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteTextView1"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:completionHint="선택하세요"
                            android:completionThreshold="2"
                            android:hint="검색어를 입력하세요."
                            android:layout_margin="8dp">
                        </AutoCompleteTextView>

                        <Button
                            android:id="@+id/btnSearch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="검색"
                            android:layout_marginRight="8dp"/>

                    </LinearLayout>

                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:padding="4dp">


                            <Button
                                android:id="@+id/btn1"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="식단관리 고고"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:id="@+id/btn2"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="일주일만에 5kg 뺄사람?"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:id="@+id/btn3"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="벼락치기하고 A+맞자"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:id="@+id/btn4"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="자전거 하루 한시간"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:id="@+id/btn5"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="마인드 컨트롤 집중력"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:id="@+id/btn6"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="일주일 식단"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:id="@+id/btn7"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="A+맞자 공부인증해!"
                                android:gravity="left|center_vertical" />


                            <Button
                                android:id="@+id/btnAddNew1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:text="목표 추가하기"/>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionHint="선택하세요"
                        android:completionThreshold="2"
                        android:hint="검색어를 입력하세요."
                        android:layout_margin="8dp">
                    </AutoCompleteTextView>

                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:padding="4dp">


                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="토익 900점 넘자"
                                android:gravity="left|center_vertical" />


                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="영어 하루 딱 한시간"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="매일 꾸준히 운동할사람"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="중국어 하루 30분"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="토익공부 인증!!"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="밀가루 안먹기.. 식단인증"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="토익 대비 단어 암기"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="한달만에 몸만들기"
                                android:gravity="left|center_vertical" />


                            <Button
                                android:id="@+id/btnAddNew2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:text="목표 추가하기"/>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionHint="선택하세요"
                        android:completionThreshold="2"
                        android:hint="검색어를 입력하세요."
                        android:layout_margin="8dp">
                    </AutoCompleteTextView>

                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:padding="4dp">



                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="매일매일 코딩연습"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="10kg 빼보자"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="일주일에 3번씩 운동"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="일주일마다 저축 인증할사람"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="한달에 한권 책읽기"
                                android:gravity="left|center_vertical" />

                            <Button
                                android:id="@+id/btnAddNew3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:text="목표 추가하기"/>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>