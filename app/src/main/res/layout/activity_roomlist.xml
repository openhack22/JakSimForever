<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RoomListActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <TabHost
        android:id="@+id/tabHost1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp">

                <LinearLayout
                    android:id="@+id/content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteTextView1"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:completionThreshold="2"
                            android:inputType="textNoSuggestions"
                            android:fontFamily="@font/notosansbold"
                            android:background="@drawable/list_searchbar"
                            android:paddingLeft="10dp"
                            android:layout_margin="8dp">
                        </AutoCompleteTextView>

                        <ImageView
                            android:id="@+id/searchBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignRight="@id/autoCompleteTextView1"
                            android:layout_marginRight="20dp"
                            android:adjustViewBounds="true"
                            app:layout_constraintDimensionRatio="1:1"
                            app:srcCompat="@drawable/list_searchbtn"
                            />
                    </RelativeLayout>

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="450dp"
                        android:layout_below="@id/autoCompleteTextView1"
                        android:textFilterEnabled="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:id="@+id/listview1"/>

                    <ImageView
                        android:id="@+id/btnAddNew1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="15dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:srcCompat="@drawable/list_addgoal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteTextView2"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:completionThreshold="2"
                            android:inputType="textNoSuggestions"
                            android:fontFamily="@font/notosansbold"
                            android:background="@drawable/list_searchbar"
                            android:paddingLeft="10dp"
                            android:layout_margin="8dp">
                        </AutoCompleteTextView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignRight="@id/autoCompleteTextView2"
                            android:layout_marginRight="20dp"
                            android:adjustViewBounds="true"
                            app:layout_constraintDimensionRatio="1:1"
                            app:srcCompat="@drawable/list_searchbtn"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    </LinearLayout>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="450dp"
                        android:layout_below="@id/autoCompleteTextView1"
                        android:textFilterEnabled="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:id="@+id/listview2"/>

                    <ImageView
                        android:id="@+id/btnAddNew2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:layout_constraintDimensionRatio="1:1"
                        app:srcCompat="@drawable/list_addgoal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteTextView3"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:completionThreshold="2"
                            android:inputType="textNoSuggestions"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/notosansbold"
                            android:background="@drawable/list_searchbar"
                            android:layout_margin="8dp">
                        </AutoCompleteTextView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignRight="@id/autoCompleteTextView3"
                            android:layout_marginRight="20dp"
                            android:adjustViewBounds="true"
                            app:layout_constraintDimensionRatio="1:1"
                            app:srcCompat="@drawable/list_searchbtn"
                            />
                    </RelativeLayout>


                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="450dp"
                        android:layout_below="@id/autoCompleteTextView2"
                        android:textFilterEnabled="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:id="@+id/listview3"/>


                    <ImageView
                        android:id="@+id/btnAddNew3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:layout_constraintDimensionRatio="1:1"
                        app:srcCompat="@drawable/list_addgoal"
                        />
                </LinearLayout>
            </FrameLayout>

    </TabHost>

</android.support.constraint.ConstraintLayout>