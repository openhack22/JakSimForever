<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txt_result"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/txt_rank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="120dp"
        android:textStyle="bold"
        android:text="축하합니다!"
        android:textSize="24dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_circle"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="175dp"
        android:src="@drawable/ic_fiber_manual_record_black_24dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        />
    <TextView
        android:id="@+id/txt_rank"
        android:visibility="gone"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="1위"
        android:textColor="#000"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_winner_name"
        android:layout_margin="100dp"
        android:visibility="gone"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/txt_rank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:text="userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_medal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/txt_winner_name"
        app:layout_constraintTop_toBottomOf="@id/txt_rank"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/award_gettrophy"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_cost"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="25dp"
        android:background="#ffcc33"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/sixPeopleBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:srcCompat="@drawable/award_getaward"
            />
        <TextView
            android:id="@+id/txt_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="40dp"/>

    </android.support.constraint.ConstraintLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:lottie_fileName="4768-trophy.json"
        app:lottie_loop="false"
        app:lottie_autoPlay="true"/>
</android.support.constraint.ConstraintLayout>