<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/joinLayoutMargin"
    android:layout_marginRight="@dimen/joinLayoutMargin"
    tools:context=".JoinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/JoinUserLayoutMarginTop"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/join_userinfobackground"
                android:adjustViewBounds="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/JoinUserTextviewHeight"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:layout_width="@dimen/JoinUserTextviewWidth"
                        android:layout_height="@dimen/JoinUserTextviewHeight"
                        android:text="아이디"
                        android:textSize="13dp"
                        android:gravity="left|center"
                        />

                    <EditText
                        android:id="@+id/editTextID"
                        android:layout_width="@dimen/JoinEditTextWidth"
                        android:layout_height="@dimen/JoinUserTextviewHeight"
                        android:imeOptions="actionNext"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="10dp"
                        android:background="@drawable/join_idedittext"
                        />

                    <ImageView
                        android:id="@+id/idCheckBtn"
                        android:layout_width="70dp"
                        android:layout_height="@dimen/JoinUserTextviewHeight"
                        app:srcCompat="@drawable/join_checkbtn"
                        android:layout_marginLeft="20dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintDimensionRatio="1:1"
                        android:layout_gravity="right|center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/JoinUserTextviewHeight"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:layout_width="@dimen/JoinUserTextviewWidth"
                        android:layout_height="@dimen/JoinUserTextviewHeight"
                        android:text="비밀번호"
                        android:textSize="13dp"
                        android:gravity="left|center"
                        android:layout_gravity="left"
                        />

                    <EditText
                        android:id="@+id/editTextPwd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/JoinUserTextviewHeight"
                        android:imeOptions="actionNext"
                        android:background="@drawable/join_cardedittext"
                        android:layout_gravity="center"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        />

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/JoinUserTextviewHeight"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="@dimen/JoinUserTextviewWidth"
                    android:layout_height="@dimen/JoinUserTextviewHeight"
                    />
                <EditText
                    android:id="@+id/editTextPwdReCheck"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/JoinUserTextviewHeight"
                    android:imeOptions="actionNext"
                    android:background="@drawable/join_cardedittext"
                    android:inputType="textPassword"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="@dimen/JoinUserTextviewWidth"
                        android:layout_height="@dimen/JoinUserTextviewHeight"
                        android:text="닉네임"
                        android:textSize="13dp"
                        android:gravity="left|center"
                        />

                    <EditText
                        android:id="@+id/editTextUsername"
                        android:layout_width="@dimen/JoinEditTextWidth"
                        android:layout_height="@dimen/JoinUserTextviewHeight"
                        android:imeOptions="actionNext"
                        android:inputType="textNoSuggestions"
                        android:background="@drawable/join_idedittext"
                        android:paddingLeft="10dp"
                        />
                    <ImageView
                        android:id="@+id/usernameCheckBtn"
                        android:layout_width="70dp"
                        android:layout_height="@dimen/JoinUserTextviewHeight"
                        android:layout_marginLeft="20dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintDimensionRatio="1:1"
                        android:layout_gravity="right|center"
                        app:srcCompat="@drawable/join_checkbtn"
                        />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/join_cardinfobackground"
                android:adjustViewBounds="true">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:text="은행"/>

                <Spinner
                    android:id="@+id/bankSpinner"
                    android:layout_width="@dimen/cardLayoutWidth"
                    android:layout_height="@dimen/cardEditTextHeight"
                    android:background="@drawable/join_cardbankspinner"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"></Spinner>

                <TextView
                    android:layout_width="@dimen/cardLayoutWidth"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:text="카드번호"/>

                <LinearLayout
                    android:layout_width="@dimen/cardLayoutWidth"
                    android:layout_height="@dimen/cardEditTextHeight"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/editTextCardName1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/cardEditTextHeight"
                        android:layout_weight="0.25"
                        android:imeOptions="actionNext"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="10dp"
                        android:background="@drawable/join_cardnumedittext"
                        android:layout_marginRight="10dp"
                        />

                    <EditText
                        android:id="@+id/editTextCardName2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/cardEditTextHeight"
                        android:layout_weight="0.25"
                        android:imeOptions="actionNext"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="10dp"
                        android:background="@drawable/join_cardnumedittext"
                        android:layout_marginRight="10dp"
                        />

                    <EditText
                        android:id="@+id/editTextCardName3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/cardEditTextHeight"
                        android:layout_weight="0.25"
                        android:imeOptions="actionNext"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="10dp"
                        android:background="@drawable/join_cardnumedittext"
                        android:layout_marginRight="10dp"
                        />

                    <EditText
                        android:id="@+id/editTextCardName4"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/cardEditTextHeight"
                        android:layout_weight="0.25"
                        android:imeOptions="actionNext"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="10dp"
                        android:background="@drawable/join_cardnumedittext"
                        android:layout_marginRight="10dp"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/cardLayoutWidth"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textSize="12dp"
                    android:text="CVC 번호"/>

                <EditText
                    android:id="@+id/editTextCardCVC"
                    android:layout_width="@dimen/cardLayoutWidth"
                    android:layout_height="@dimen/cardEditTextHeight"
                    android:imeOptions="actionNext"
                    android:inputType="textNoSuggestions"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/join_cardedittext"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:layout_width="@dimen/cardLayoutWidth"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:layout_marginBottom="5dp"
                    android:text="카드만기일"/>

                <LinearLayout
                    android:layout_width="@dimen/cardLayoutWidth"
                    android:layout_height="@dimen/cardEditTextHeight"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginBottom="10dp"
                    >

                    <Spinner
                        android:id="@+id/yearSpinner"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/cardEditTextHeight"
                        android:layout_weight="0.45"
                        android:background="@drawable/join_cardyearspinner"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        ></Spinner>

                    <Spinner
                        android:id="@+id/monthSpinner"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/cardEditTextHeight"
                        android:layout_weight="0.25"
                        android:background="@drawable/join_cardyearspinner"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        ></Spinner>

                    <Spinner
                        android:id="@+id/daySpinner"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/cardEditTextHeight"
                        android:layout_weight="0.25"
                        android:background="@drawable/join_cardyearspinner"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center"
                        ></Spinner>
                </LinearLayout>
                <TextView
                    android:layout_width="@dimen/cardLayoutWidth"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:layout_marginBottom="5dp"
                    android:text="카드비밀번호"/>
                <EditText
                    android:id="@+id/editTextCardPwd"
                    android:layout_width="@dimen/cardLayoutWidth"
                    android:layout_height="@dimen/cardEditTextHeight"
                    android:imeOptions="actionNext"
                    android:inputType="textNoSuggestions"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/join_cardedittext"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/joinBtn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_gravity="right"
        app:layout_constraintDimensionRatio="1:1"
        app:srcCompat="@drawable/join_joinbtn"
        />
</LinearLayout>